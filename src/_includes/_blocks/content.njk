{#
  Content Block
  @param {string} content - Rich text content (markdown)
  @param {boolean} sidebar - Show sidebar
  @param {string} sidebar_content - Sidebar content
  @param {number} _index - Block index for CloudCannon editable binding
#}
{% macro contentBlock(props) %}
{%- set bindPath = 'blocks[' + props._index + ']' if props._index is defined else '' -%}

<section class="py-16 lg:py-24"{% if bindPath %} data-cms-bind="#{{ bindPath }}"{% endif %}>
  <div class="container mx-auto px-4">
    {% if props.sidebar %}
    <div class="grid gap-12 lg:grid-cols-3">
      <div class="lg:col-span-2 prose prose-lg max-w-none{% if bindPath %} editable{% endif %}"{% if bindPath %} data-cms-bind="#{{ bindPath }}.content"{% endif %}>
        {{ props.content | safe }}
      </div>
      <aside class="lg:col-span-1">
        <div class="sticky top-24 bg-stone-50 rounded-xl p-6{% if bindPath %} editable{% endif %}"{% if bindPath %} data-cms-bind="#{{ bindPath }}.sidebar_content"{% endif %}>
          {{ props.sidebar_content | safe }}
        </div>
      </aside>
    </div>
    {% else %}
    <div class="prose prose-lg max-w-4xl mx-auto{% if bindPath %} editable{% endif %}"{% if bindPath %} data-cms-bind="#{{ bindPath }}.content"{% endif %}>
      {{ props.content | safe }}
    </div>
    {% endif %}
  </div>
</section>
{% endmacro %}
