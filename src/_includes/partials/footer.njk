<footer class="bg-stone-900 text-stone-300">
  <div class="container mx-auto px-4 py-12 lg:py-16">
    <div class="grid lg:grid-cols-4 gap-14 lg:gap-24">
      {# Brand Column #}
      <div class="">
        {% if footer.logo or footer.name %}
        <a href="/" class="inline-flex flex-col gap-2 text-xl font-bold text-white hover:text-primary-400 transition-colors">
          {% if footer.logo %}<img src="{{ footer.logo }}" alt="" class="h-8 w-auto">{% endif %}
          {% if footer.name %}<span>{{ footer.name }}</span>{% endif %}
        </a>
        {% endif %}
        {% if footer.tagline %}
        <p class="mt-4 text-stone-400 text-sm [&_a]:text-stone-300 [&_a]:hover:text-white [&_a]:transition-colors [&_a]:underline">
          {{ footer.tagline | safe }}
        </p>
        {% endif %}
        {% if footer.show_socials and socials.profiles.length %}
        <div class="flex gap-4 mt-6">
          {% for profile in socials.profiles %}
          <a href="{{ profile.url }}" target="_blank" rel="noopener noreferrer" class="text-stone-400 hover:text-white transition-colors" aria-label="{{ profile.network }}">
            {% phosphor profile.network + "-logo", "bold", { size: 20 } %}
          </a>
          {% endfor %}
        </div>
        {% endif %}
      </div>

      <div class="md:col-span-3 grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
      {# Footer Sections #}
      {% for section in footer.sections %}
      <div>
        <h3 class="text-white text-sm font-semibold uppercase tracking-wider mb-4">{{ section.title }}</h3>
        <ul class="space-y-3">
          {% for link in section.links %}
          <li>
            <a href="{{ link.url }}" class="text-stone-400 hover:text-white transition-colors text-sm">
              {{ link.label }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>
      {% endfor %}
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-stone-800 text-stone-400 text-sm">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="md:flex-1">&copy; {% year %} {{ footer.copyright }}</p>
        {% if footer.show_credits %}
        <p class="md:flex-1 md:text-center">Designed by <a href="https://alex.zappa.dev/" target="_blank" rel="noopener noreferrer" class="text-stone-300 hover:text-white transition-colors underline">Alex Zappa</a> at <a href="https://freshjuice.dev/" target="_blank" rel="noopener noreferrer" class="text-stone-300 hover:text-white transition-colors underline">FreshJuice</a></p>
        {% endif %}
        {% if footer.quick_links %}
        <p class="md:flex-1 md:text-right flex items-center justify-center md:justify-end gap-3">
          {% for link in footer.quick_links %}
          {% if not loop.first %}<span class="hidden md:inline">&middot;</span>{% endif %}
          <a href="{{ link.url }}" {% if link.url.startsWith('http') %}target="_blank" rel="noopener noreferrer"{% endif %} class="{% if link.icon %}inline-flex items-center gap-1 {% endif %}text-stone-300 hover:text-white transition-colors{{ ' '~link.class if link.class }}">
            {% if link.icon %}{% phosphor link.icon, "bold", { size: 16 } %}{% endif %}
            <span>{{ link.label }}</span>
          </a>
          {% endfor %}
        </p>
        {% endif %}
      </div>
    </div>
  </div>
</footer>
