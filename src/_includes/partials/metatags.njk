{# Primary Meta Tags #}
<meta name="generator" content="{{ eleventy.generator }}">
<title>{{ title }}{% if title %} | {% endif %}{{ metadata.site_name }}</title>
<meta name="title" content="{{ title or metadata.site_name }}">
<meta name="description" content="{{ description or metadata.site_description }}">

{# Canonical URL #}
<link rel="canonical" href="{{ build.url }}{{ page.url }}">

{# Robots #}
{% if noindex %}
<meta name="robots" content="noindex, nofollow">
{% else %}
<meta name="robots" content="index, follow">
{% endif %}

{# Site Verification #}
{% if tracking.google_site_verification %}
<meta name="google-site-verification" content="{{ tracking.google_site_verification }}">
{% endif %}
{% if tracking.bing_site_verification %}
<meta name="msvalidate.01" content="{{ tracking.bing_site_verification }}">
{% endif %}

{# Open Graph / Facebook #}
<meta property="og:type" content="{% if layout === 'layouts/post.njk' %}article{% else %}website{% endif %}">
<meta property="og:url" content="{{ build.url }}{{ page.url }}">
<meta property="og:title" content="{{ title or metadata.site_name }}">
<meta property="og:description" content="{{ description or metadata.site_description }}">
<meta property="og:image" content="{{ build.url }}{{ image or metadata.default_image }}">
<meta property="og:site_name" content="{{ metadata.site_name }}">
<meta property="og:locale" content="{{ metadata.locale }}">

{# Twitter #}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:url" content="{{ build.url }}{{ page.url }}">
<meta name="twitter:title" content="{{ title or metadata.site_name }}">
<meta name="twitter:description" content="{{ description or metadata.site_description }}">
<meta name="twitter:image" content="{{ build.url }}{{ image or metadata.default_image }}">

{# Article specific meta #}
{% if layout === 'layouts/post.njk' %}
<meta property="article:published_time" content="{{ date | dateToISOString }}">
{% if author %}
<meta property="article:author" content="{{ author }}">
{% endif %}
{% if tags %}
{% for tag in tags %}
{% if tag !== 'blog' %}
<meta property="article:tag" content="{{ tag }}">
{% endif %}
{% endfor %}
{% endif %}
{% endif %}

{# Favicon #}
<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96">
<link rel="icon" type="image/svg+xml" href="/favicon.svg">
<link rel="shortcut icon" href="/favicon.ico">
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="manifest" href="/site.webmanifest">

{# RSS Feed #}
<link rel="alternate" type="application/rss+xml" title="{{ metadata.site_name }} RSS Feed" href="{{ build.url }}/feed.xml">

{# Theme Color #}
<meta name="theme-color" content="#22c55e">
