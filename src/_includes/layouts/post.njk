---
layout: layouts/base.njk
---
{% from "_components/index.njk" import badge, authorCard %}

<article class="py-12 lg:py-20">
  <div class="container mx-auto px-4 max-w-4xl">
    <header class="mb-8 lg:mb-12">
      {% if tags %}
      <div class="flex flex-wrap gap-2 mb-4">
        {% for tag in tags %}
          {% if tag !== 'blog' %}
            {{ badge({ text: tag }) }}
          {% endif %}
        {% endfor %}
      </div>
      {% endif %}

      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">{{ title }}</h1>

      {% if description %}
      <p class="text-xl text-gray-600 mb-6">{{ description }}</p>
      {% endif %}

      <div class="flex items-center gap-4 text-gray-500">
        <time datetime="{{ date | dateToISOString }}">{{ date | readableDate }}</time>
        {% if author %}
          {%- set authorData = collections.authors | getAuthor(author) -%}
          <span>by {{ authorData.data.name if authorData else author }}</span>
        {% endif %}
      </div>
    </header>

    {% if image %}
    <figure class="mb-8 lg:mb-12 -mx-4 lg:mx-0">
      <img src="{{ image }}" alt="{{ image_alt or title }}" class="w-full rounded-lg" loading="lazy">
      {% if image_caption %}
      <figcaption class="text-center text-gray-500 text-sm mt-2">{{ image_caption }}</figcaption>
      {% endif %}
    </figure>
    {% endif %}

    <div class="prose prose-lg max-w-none prose-headings:font-bold prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline">
      {{ content | safe }}
    </div>

    {% if author %}
    <footer class="mt-12 pt-8 border-t border-gray-200">
      {% set authorData = collections.authors | getAuthor(author) %}
      {% if authorData %}
        {{ authorCard({
          name: authorData.data.name,
          bio: authorData.data.bio,
          avatar: authorData.data.avatar,
          url: authorData.url
        }) }}
      {% endif %}
    </footer>
    {% endif %}
  </div>
</article>
